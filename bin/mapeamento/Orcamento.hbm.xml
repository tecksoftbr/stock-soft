<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
	<class name="modelo.Orcamento" table="orcamento">
	<id name="codigo" column="codigo_Orcamento" >
	<generator class="increment"></generator>
	</id> 
	
	<property name="descricao"          column="descricao"                    length="50" />
	<property name="complemento"        column="complemento"                  length="50" />
	<property name="volume"            column="volume"                        length="10" />
	<property name="subtotal"          column="subtotal"                      length="10" />
	<property name="desconto"          column="desconto"                      length="10" />
	<property name="total"            column="total"                          length="10" />



	
	</class>
	</hibernate-mapping>
